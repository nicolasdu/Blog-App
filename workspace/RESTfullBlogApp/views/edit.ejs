<% include layouts/header.ejs %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%=blog.title%></div>
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="title" value="<%=blog.title%>" required>
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="image" value="<%=blog.image%>" required>
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea rows="4" cols="50"  name="body" required><%=blog.body%></textarea>
        </div>
        <div class="field">
            <input class="ui violet basic button" type="submit">
        </div>
    </form>
</div>
<% include layouts/footer.ejs %>